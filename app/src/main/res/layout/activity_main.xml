<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.arclauncher.CustomerView.ObersverScollerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollerview">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40sp"/>
    </com.example.arclauncher.CustomerView.ObersverScollerView>

    <com.example.arclauncher.CustomerView.ArcMenu
        android:id="@+id/arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        app:position="right_bottom"
        app:radius="130dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_button"
                android:layout_centerInParent="true"
                android:src="@drawable/cross"
                />
        </RelativeLayout>
        <!--接下来就是设置sub button-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comments"
            android:id="@+id/commentsButn"
            android:tag="comments"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shared"
            android:id="@+id/shared_Butn"
            android:tag="shared"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support"
            android:id="@+id/support_Butn"
            android:tag="support"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/love"
            android:id="@+id/love_Butn"
            android:tag="love"/>
    </com.example.arclauncher.CustomerView.ArcMenu>

</RelativeLayout>
